@inherits UmbracoViewPage<Umbraco.Cms.Core.Models.Blocks.BlockListItem<_Days.Models.Content.NewsletterRegistrationBlock>>

<aside class="p-12 bg-gradient-to-r from-[20274e] to-[e6c2bd] rounded-xl sm:p-16 lg:p-24">
    <div class="max-w-xl mx-auto text-center">
        
        @if (!string.IsNullOrWhiteSpace(Model.Content.Tagline))
        {
            <p class="text-sm font-medium text-gray-300">
                Don't let big companies own your data
            </p>
        }
       

        <h2 class="mt-2 text-3xl font-bold text-white sm:text-4xl">
            @Model.Content.Title
        </h2>

        <form class="mt-8 sm:flex">
            <div class="sm:flex-1">
                <label for="email" class="sr-only">Email</label>

                <input
                    type="email"
                    placeholder="@(!string.IsNullOrWhiteSpace(Model.Content.InputFieldPlaceholder) ? Model.Content.InputFieldPlaceholder : "Email address" )"
                    class="w-full p-3 text-gray-800 bg-white border-2 border-gray-700 rounded-lg"/>
            </div>

            <button
                type="submit"
                class="flex items-center justify-between w-full px-5 py-3 mt-4 font-medium text-white bg-blue-600 rounded-lg sm:w-auto sm:mt-0 sm:ml-4 hover:bg-blue-500">
                @(!string.IsNullOrWhiteSpace(Model.Content.ButtonText) ? Model.Content.ButtonText : "Sign up" )

                <svg
                    xmlns="http://www.w3.org/2000/svg"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke="currentColor"
                    class="flex-shrink-0 w-4 h-4 ml-3">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"/>
                </svg>
            </button>
        </form>
    </div>
</aside>